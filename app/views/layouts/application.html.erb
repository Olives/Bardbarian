<!DOCTYPE html>
<html>
  <head>
    <title>Bardbarian</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery.selectbox-0.5" %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">
      $(function(){
        $("li.nav_<%=@active_nav%>").addClass("active");
        $("li.subnav_<%=@active_subnav%>").addClass("active");
        $('.selectbox').selectbox();
        if($.trim($("div.body-right").text()) == ""){
          $("div.body-right").remove();
          $("div.body-left").removeClass("body-left");
        }
      });
    </script>
  </head>
  <body>
    <div class="heading">
      <%= render :partial => "/layouts/primary_nav" %>
    </div>
    <%= render :partial => "layouts/subnav" if @subnav %>

    <div id="content" class="round-all">
        <div style="padding-top:50px" class="body-left">
          <%= yield %>
        </div>

        <div style="padding-top:50px" class="body-right">
          <%= yield(:right_sidebar) %>
        </div>
      <div class="clear"></div>
    </div>
    <div class="footer">
      <p>&copy; 2006 all rights reserved.</p>
    </div>

  </body>
</html>
